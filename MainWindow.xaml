<Window x:Class="NmWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NmWpf" 
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        Style="{StaticResource UiWindow}"
        WindowStyle="None"
        Background="Transparent"
        mc:Ignorable="d"
        d:Background="#a333"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar Grid.Row="0" ForceShutdown="True" />

        <Grid Grid.Row="1" Margin="12,6,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <wpfui:NavigationCompact Grid.Column="0" Margin="0,0,12,0" 
                                    x:Name="RootNavigation"
                                    Frame="{Binding ElementName=RootFrame}">
                <wpfui:NavigationCompact.Items>
                    <wpfui:NavigationItem
                        Content="Метод Эйлера"
                        Icon="Calculator24"
                        Page="{x:Type local:Pages.HomePage}"
                        PageTag="mainPage"
                        Cursor="Hand"/>
                    <wpfui:NavigationItem
                        Content="Метод Рунге-Кутта"
                        Icon="CalculatorMultiple24"
                        Page="{x:Type local:Pages.RKPage}"
                        PageTag="rkPage"
                        Cursor="Hand"/>
                    <wpfui:NavigationItem
                        Content="О программе"
                        Icon="Info24"
                        Page="{x:Type local:Pages.InfoPage}"
                        PageTag="infoPage"
                        Cursor="Hand"/>
                </wpfui:NavigationCompact.Items>
            </wpfui:NavigationCompact>

            <Frame Grid.Column="1" x:Name="RootFrame"/>
        </Grid>
    </Grid>
</Window>
